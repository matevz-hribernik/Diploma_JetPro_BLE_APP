<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/valuecontainer"
        android:layout_width="420px"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:weightSum="1">
        <!-- add equal sized space on left so that title can be centered and view is still measurable -->

        <TextView
            android:id="@+id/unitspace"
            style="@style/recon_jet_text_secondary"
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:layout_weight="0.54"
            android:textSize="20px" />

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="64px"
            tools:text="34.5" />

        <TextView
            android:id="@+id/unit"
            style="@style/recon_jet_text_secondary"
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:layout_weight="0.29"
            android:gravity="top"
            android:paddingTop="10px"
            android:textSize="20px"
            tools:text="km" />

    </LinearLayout>

    <TextView
        android:id="@+id/type"
        style="@style/recon_jet_text_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valuecontainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-12dp"
        android:layout_weight="0.54"
        android:gravity="center"
        android:textSize="20px"
        tools:text="DISTANCE" />

</RelativeLayout>
